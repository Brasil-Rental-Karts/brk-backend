# ===================================
# Application Configuration
# ===================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ===================================
# Database Configuration
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=brk_competition
DB_SSL=false

# ===================================
# Redis Configuration
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_MAX_MEMORY=256mb

# ===================================
# JWT Configuration
# ===================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ACCESS_EXPIRY=2d
JWT_REFRESH_EXPIRY=7d

# ===================================
# Email Configuration (Brevo/Sendinblue)
# ===================================
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@brasilrentalkarts.com.br
BREVO_SENDER_NAME=Brasil Rental Karts

# ===================================
# Frontend Configuration
# ===================================
FRONTEND_URL=http://localhost:5173,http://localhost:5174
PASSWORD_RESET_PATH=/reset-password
EMAIL_CONFIRMATION_PATH=/confirm-email

# ===================================
# Google OAuth Configuration
# ===================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ===================================
# Cookie Configuration
# ===================================
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# ===================================
# Security Configuration
# ===================================
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# Nginx Configuration (Optional)
# ===================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ===================================
# Production Overrides
# ===================================
# Uncomment and modify for production:
# NODE_ENV=production
# LOG_LEVEL=warn
# DB_SSL=true
# COOKIE_SECURE=true
# COOKIE_SAMESITE=strict
# FRONTEND_URL=https://yourdomain.com
# GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# ===================================
# Asaas Payment Configuration
# ===================================
ASAAS_API_URL=https://sandbox.asaas.com/api/v3
ASAAS_API_KEY=your-asaas-api-key-here
ASAAS_WEBHOOK_URL=https://yourdomain.com/api/webhooks/asaas

# ===================================
# Sentry Configuration
# ===================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# ===================================
# Short.io Configuration
# ===================================
SHORTIO_API_KEY=your_shortio_api_key_here
SHORTIO_DOMAIN=your_domain_here