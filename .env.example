# Server configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=brk_competition
DB_SSL=false

# JWT configuration
JWT_SECRET=development-jwt-secret-replace-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# RabbitMQ configuration (CloudAMQP)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_EXCHANGE=database_events
RABBITMQ_QUEUE=database_changes
RABBITMQ_ROUTING_KEY=database.changes

# Brevo (Email) configuration
BREVO_API_KEY=your-brave-api-key
BREVO_SENDER_EMAIL=teste@brasilrentalkarts.com.br
BREVO_SENDER_NAME=(TESTE) Brasil Rental Karts

# Frontend URL for reset password page

FRONTEND_URL=http://localhost:5173
PASSWORD_RESET_PATH=/change-password

# Google OAuth configuration

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback